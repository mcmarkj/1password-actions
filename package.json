    "@types/node": "^22.4.1",
    "@typescript-eslint/parser": "^8.0.1",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.57.0",
    "eslint-plugin-github": "^5.0.1",
    "eslint-plugin-jest": "^28.8.0",
