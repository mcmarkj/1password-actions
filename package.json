  "devDependencies": {
    "@types/jest": "^26.0.15",
    "@types/node": "^16.10.5",
    "@types/request": "^2.48.5",
    "@typescript-eslint/parser": "^5.8.1",
    "@vercel/ncc": "^0.31.1",
    "eslint": "^7.32.0",
    "eslint-plugin-github": "^4.3.2",
